{
  "name": "Notion: copy URL with the \"cmd+L\" shortcut on Google Chrome",
  "description": "Injects custom functionality (copy URL) on the \"cmd+L\" shortcut when in https://www.notion.so/* pages.",
  "homepage_url": "https://github.com/tsekitsi/cmd-l-hotkey-modifier-chrome-extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "execute.js will run (watch the Chrome DevTools' console)"
  },
  "content_scripts": [
    {
      "run_at" : "document_start",
      "js": ["before.js"],
      "matches": [
        "https://www.notion.so/*"
      ]
    },
    {
      "run_at" : "document_idle",
      "js": ["after.js"],
      "matches": [
        "https://www.notion.so/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.notion.so/*"
  ]
}
